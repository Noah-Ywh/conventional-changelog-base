{
  "name": "@noahyu/conventional-changelog-base",
  "type": "module",
  "version": "1.1.1",
  "description": "noahyu preset for conventional-changelog.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": "./*"
  },
  "files": [
    "/dist"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "rollup -c",
    "changelog": "conventional-changelog -n './changelog.config.js' -i CHANGELOG.md -s -r 0 -k ./package.json --commit-path ./ && pnpm prettier",
    "prettier": "prettier --config .prettierrc --write ./**/*.md",
    "lint": "eslint",
    "prepare": "husky install"
  },
  "keywords": [
    "conventional-changelog"
  ],
  "author": "Noah Yu",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Noah-Ywh/conventional-changelog-base.git"
  },
  "homepage": "https://paint-js.com/docs/conventional-changelog-base",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "conventional-changelog-cli": ">=5"
  },
  "dependencies": {
    "compare-func": "^2.0.0",
    "conventional-changelog-cli": "^5.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.33.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/compare-func": "^1.3.3",
    "@types/eslint": "^9.6.1",
    "@types/estree": "^1.0.8",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "commitizen": "^4.3.1",
    "cz-git": "^1.12.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "rollup": "^4.46.2",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-dts": "^6.2.1",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "packageManager": "pnpm@10.14.0"
}
